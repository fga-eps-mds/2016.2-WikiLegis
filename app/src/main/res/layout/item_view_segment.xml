<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation = "vertical"
android:layout_marginTop="1px">


<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frameCardViewSegment"
    android:layout_below="@+id/frameLayout"
    android:background="@color/cardview_light_background"
    android:layout_alignStart="@+id/frameLayout"
    android:layout_alignEnd="@+id/frameLayout"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewSegment"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="29dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chat"
            android:id="@+id/imageViewProposalCard"
            android:layout_below="@+id/textViewSegment"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
             />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dislike"
            android:id="@+id/imageViewDislikeCard"
            android:layout_marginEnd="100dp"
            android:layout_alignBottom="@+id/imageViewProposalCard"
            android:layout_toStartOf="@+id/imageViewProposalCard" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/like"
            android:id="@+id/imageViewLikeCard"
            android:layout_alignTop="@+id/imageViewDislikeCard"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNumberLikeCard"
            android:layout_alignTop="@+id/imageViewLikeCard"
            android:layout_toEndOf="@+id/imageViewLikeCard"
            android:layout_alignBottom="@+id/imageViewLikeCard"
            android:textSize="27dp"
            android:textIsSelectable="false"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewLikeCard"
            android:layout_alignBottom="@+id/imageViewLikeCard"
            android:layout_marginStart="190dp"
            android:id="@+id/textViewNumberDislikeCard"
            android:textSize="27dp" />


    </RelativeLayout>



</android.support.v7.widget.CardView>


</RelativeLayout>